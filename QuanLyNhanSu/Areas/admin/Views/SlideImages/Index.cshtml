@model IEnumerable<QuanLyNhanSu.Models.SlideImage>

@{
    ViewBag.Title = "Slide images";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Slides
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-user"></i>Slides
            </li>
        </ol>
    </div>
</div>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, // <-- Route value
                 new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered table-responsive ">
        <tr class="success">
            <th>
                Images
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alt)
            </th>
            <th>
                <div class="control-label">
                    <label>Tiêu đề</label>
                </div>
            </th>
            <th>
                <div class="control-label">
                    <label>Ngày tạo</label>
                </div>
            </th>
            <th>
                <div class="control-label">
                    <label>Ngày cập nhật</label>
                </div>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Content/images/@item.src" class="img-circle img-responsive img-thumbnail" style="width:50px;height:50px" onclick="showImagePreview('@item.src')" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.alt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.create_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.update_date)
                </td>
                <td>

                    <a class="btn btn-warning" href="@Url.Action("Edit", "SlideImages", new {@id = @item.id })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                    @*@Html.ActionLink("Details", "Details", new { id = item.id }) |*@
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@item.id">
                        Xóa
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="@item.id" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content text-center">
                                <div class="modal-body">
                                    <p>Bạn muốn xóa @item.id+@item.alt?</p>
                                </div>
                                <a class="btn btn-danger" href="@Url.Action("Delete", "SlideImages", new { id = @item.id })">
                                    <span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span>
                                </a>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy</button>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }

    </table>
</div>

    <div class="modal fade" id="imagePreviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <img id="imagePreview" src="" class="img-responsive img-thumbnail" />
                </div>
            </div>
        </div>
    </div>
    <style>
        td img:hover {
            cursor: zoom-in;
        }
    </style>

    <script>

        $(document).ready(function () {
            $("#table-taikhoan").DataTable();
        });

        function showImagePreview(srcImage) {
            $el = $('<button type="button" id="showModel" class="btn btn-primary" data-toggle="modal" data-target="#imagePreviewModal"></button>');
            $('body').append($el);
            $("#imagePreview").attr('src', "/Content/images/" + srcImage);
            $("#showModel").click();
        }

    </script>

